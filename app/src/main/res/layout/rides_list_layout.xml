<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="7"

    android:clickable="false"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:focusableInTouchMode="false">

    <TextView
        android:id="@+id/ride_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1.17"
        android:padding="5dp"
        android:text="22.01.2017"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="16sp"

        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>
    <!--android:background="@drawable/borderred"-->

    <TextView
        android:id="@+id/ride_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="0.83"
        android:padding="5dp"
        android:text="22:22"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"

        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <ImageView
        android:id="@+id/direction_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        app:srcCompat="@drawable/ic_flight_land_black_24dp"

        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <TextView
        android:id="@+id/ride_addr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="2.43"
        android:padding="5dp"
        android:text="Hagenmullergasse 33/105"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="16sp"

        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <TextView
        android:id="@+id/ride_plz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="0.92"
        android:padding="5dp"
        android:text="1040"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"

        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <TextView
        android:id="@+id/email_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="cosic.ervin@gmail.com"
        android:textColor="#000000"
        android:layout_weight="0.26"

        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <TextView
        android:id="@+id/ride_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="0.71"
        android:padding="5dp"
        android:text="37e"
        android:textColor="#000000"

        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <ImageView
        android:id="@+id/image_driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:minWidth="48dp"
        android:minHeight="48dp"

        app:srcCompat="@drawable/ic_remove_red_eye_black_24dp" />

    <ImageView
        android:id="@+id/image_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_create_black_24dp"

        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>
</LinearLayout>